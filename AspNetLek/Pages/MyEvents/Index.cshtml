        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Organizer.OrganizerName)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
